{
  "name": "lerna-run",
  "version": "0.0.1",
  "description": "run command in each packages of lerna",
  "main": "index.js",
  "bin": {
    "lerna-run": "bin/lerna-run.js"
  },
  "scripts": {
    "mocha": "mocha test/*.js",
    "eslint": "eslint */*.js",
    "test": "npm run eslint && npm run mocha",
    "watch": "chokidar */*.js -c 'npm test'"
  },
  "keywords": [
    "lerna",
    "monorepo",
    "cli",
    "command"
  ],
  "author": "Sho Hashimoto <hashimoto@shokai.org>",
  "license": "MIT",
  "devDependencies": {
    "chai": "^3.5.0",
    "chokidar-cli": "^1.2.0",
    "eslint": "^1.10.3",
    "eslint-plugin-if-in-test": "^0.2.0",
    "mocha": "^2.4.5"
  },
  "dependencies": {
    "async": "^1.5.2"
  }
}
